[
  [ // Common parameters
    {
      "name": "MOUNTPOINT",
      "description": "OWFS file system mount point",
      "default": "/mnt/1wire"
    },
    {
      "name": "SERVER",
      "description": "OWFS Server[:Port]",
      "default": "localhost:4304"
    },
    {
      "name": "CACHED",
      "description": "Use cached sensor values",
      "type": "b",
      "default": "n"
    },
    {
      "name": "UNIT",
      "description": "Unit for temperature sensors, see also \"owread -h\"",
      "values": [ "C", "F", "K", "R" ],
      "default": "C"
    },
    {
      "name": "OWREAD",
      "description": "Path to owread, if script can't detect"
    }
  ],
  [ // Multiple parameters
    {
      "name": "GUID",
      "description": "PVLng channel GUID",
      "required": 1
    },
    {
      "name": "SERIAL",
      "description": "Sensor serial (read from PVLng channel (serial) by API if empty)"
    },
    {
      "name": "CHANNEL",
      "description": "Sensor channel (read from PVLng channel (schannel) by API if empty)"
    }
  ]
]
